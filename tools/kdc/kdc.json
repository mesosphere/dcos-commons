{
  "id": "/kdc",
  "instances": 1,
  "cpus": 0.5,
  "mem": 128,
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "mesosphere/kdc:5636d1733535abc2f958db549dda2732531ad7e4"
    }
  },
  "networks": [
    {
      "mode": "host"
    }
  ],
  "portDefinitions": [
    {
      "port": 2500,
      "name": "kdc"
    },
    {
      "port": 2501,
      "name": "web"
    }
  ],
  "secrets": {
    "secret0": {
      "source": "kdc-admin"
    }
  },
  "env": {
    "SERVICE_ACCOUNT_SECRET": {
      "secret": "secret0"
    }
  },
  "labels": {
    "DCOS_SERVICE_NAME": "kdc",
    "DCOS_SERVICE_PORT_INDEX": "1",
    "DCOS_SERVICE_SCHEME": "http"
  },
  "requirePorts": true
}
