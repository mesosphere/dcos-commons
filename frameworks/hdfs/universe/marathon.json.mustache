    "TASKCFG_ALL_NAME_NODE_DATA_NODE_REGISTRATION_IP_HOSTNAME_CHECK": "false",
    "TASKCFG_ALL_HA_FENCING_METHODS": "shell(/bin/true)",
    "TASKCFG_ALL_HA_AUTOMATIC_FAILURE": "true",
