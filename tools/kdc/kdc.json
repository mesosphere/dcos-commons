{
  "id": "/kdc",
  "instances": 1,
  "cpus": 1,
  "mem": 512,
  "user": "nobody",
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "nvaziri/mit_kdc:dev",
      "forcePullImage": true
    }
  },
  "networks": [
    {
      "mode": "host"
    }
  ],
  "portDefinitions": [
    {
      "port": 2500,
      "name": "kdc"
    }
  ],
  "requirePorts": true,
  "env": {
    "REALM": "LOCAL",
    "KRB5_CONFIG": "/kdc/krb5.conf",
    "KRB5_KDC_PROFILE": "/kdc/kdc.conf"

  }
}
