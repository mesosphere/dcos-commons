{
  "id": "{{service.name}}",
  "cpus": 1.0,
  "mem": 1230,
  "instances": 1,
  "cmd": "export PATH=$(ls -d $MESOS_SANDBOX/jre*/bin):$PATH && env &&./scheduler/bin/reference",
  "labels": {
    "DCOS_PACKAGE_FRAMEWORK_NAME": "{{service.name}}",
    "DCOS_MIGRATION_API_VERSION": "v1",
    "DCOS_MIGRATION_API_PATH": "/v1/plan",
    "MARATHON_SINGLE_INSTANCE_APP":"true",
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_PORT_INDEX": "0",
    "DCOS_SERVICE_SCHEME": "http"
  },
  "env": {
    "LD_LIBRARY_PATH": "/opt/mesosphere/lib",
    "FRAMEWORK_NAME": "{{service.name}}",
    "METADATA_COUNT": "{{meta-data.count}}",
    "METADATA_CPU": "{{meta-data.cpus}}",
    "METADATA_MEM": "{{meta-data.mem}}",
    "METADATA_DISK": "{{meta-data.disk}}",
    "METADATA_CONSTRAINT": "{{meta-data.constraint}}",
    "DATA_COUNT": "{{data.count}}",
    "DATA_CPU": "{{data.cpus}}",
    "DATA_MEM": "{{data.mem}}",
    "DATA_DISK": "{{data.disk}}",
    "DATA_CONSTRAINT": "{{data.constraint}}",
    "SLEEP_DURATION": "{{service.sleep}}",
    "EXECUTOR_URI": "{{resource.assets.uris.executor-zip}}"
  },
  "uris": [
    "{{resource.assets.uris.jre-tar-gz}}",
    "{{resource.assets.uris.scheduler-zip}}"
  ],
  "upgradeStrategy":{
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  },
  "portDefinitions": [
    {
      "port": 0,
      "protocol": "tcp",
      "name": "api",
      "labels": {}
    }
  ]
}
