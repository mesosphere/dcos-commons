{
  "id": "/kdc",
  "instances": 1,
  "cpus": 1,
  "mem": 512,
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "nvaziri/kdc:dev",
      "forcePullImage": true
    }
  },
  "networks": [
    {
      "mode": "host"
    }
  ],
  "portDefinitions": [
    {
      "port": 2500,
      "protocol": "tcp",
      "name": "tcp",
      "labels": {"VIP_0": "kdc:2500"}
    }
  ],
  "env": {
    "LOG_LEVEL": "LOG_DEBUG"
  }
}
