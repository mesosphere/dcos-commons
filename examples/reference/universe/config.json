{
  "type":"object",
    "properties":{
      "service":{
        "type":"object",
        "description": "DC/OS service configuration properties",
        "properties":{
          "name" : {
            "description":"The name of the reference framework instance",
            "type":"string",
            "default":"data-store"
          }
        }
      },
      "meta-data":{
        "description":"Node configuration properties",
        "type":"object",
        "properties":{
          "cpus":{
            "description":"Node cpu requirements",
            "type":"number",
            "default":0.1
          },
          "mem":{
            "description":"Node mem requirements",
            "type":"integer",
            "default":512
          },
          "disk":{
            "description":"Broker disk requirements (only respected with persistent volumes)",
            "type":"integer",
            "default":2500
          },
          "count":{
            "description":"Number of nodes to run",
            "type":"number",
            "default":2
          }
        },
        "required":[
          "cpus",
          "mem",
          "disk",
          "count"
        ]
      },
      "data":{
        "description":"Node configuration properties",
        "type":"object",
        "properties":{
          "cpus":{
            "description":"Node cpu requirements",
            "type":"number",
            "default":0.2
          },
          "mem":{
            "description":"Node mem requirements",
            "type":"integer",
            "default":1024
          },
          "disk":{
            "description":"Broker disk requirements (only respected with persistent volumes)",
            "type":"integer",
            "default":5000
          },
          "count":{
            "description":"Number of nodes to run",
            "type":"number",
            "default":3
          }
        },
        "required":[
          "cpus",
          "mem",
          "disk",
          "count"
        ]
      },
      "executor":
        {
          "description": "The executor running the tasks",
          "type": "object",
          "properties": {
            "uri":{
              "description": "URI of the executor",
              "type": "string",
              "default": "https://downloads.mesosphere.com/dcos-commons/artifacts/executor.zip"
            }
          }
        }
    }
}
